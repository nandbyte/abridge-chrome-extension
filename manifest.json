{
    "name": "Abridge",
    "description": "Summarize selected text using machine learning.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_icon": "/images/abridge256.png"
    },
    "permissions": ["contextMenus", "activeTab", "tabs", "storage"],

    "background": {
        "service_worker": "/scripts/service-worker.js"
    },

    "icons": {
        "16": "/images/abridge16.png",
        "32": "/images/abridge32.png",
        "128": "/images/abridge128.png"
    }
}
