{
    "name": "Abridge",
    "description": "Summarize selected text",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_icon": "/images/nandbyte128.png"
    },
    "permissions": ["contextMenus", "activeTab", "tabs", "storage"],

    "background": {
        "service_worker": "/scripts/service-worker.js"
    },

    "icons": {
        "16": "/images/nandbyte16.png",
        "32": "/images/nandbyte32.png",
        "128": "/images/nandbyte128.png"
    }
}
